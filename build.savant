project(group: "org.savantbuild.plugin", name: "groovy-testng", version: "0.1.0", license: "Apachev2") {
  workflow {
    fetch {
      cache()
    }
    publish {
      cache()
    }
  }

  dependencies {
    group(type: "provided") {
      dependency(id: "org.savantbuild:savant-core:0.1.0-{integration}")
      dependency(id: "org.savantbuild:savant-dependency-management:0.1.0-{integration}")
      dependency(id: "org.savantbuild:savant-utils:0.1.0-{integration}")
    }
    group(type: "compile") {
      dependency(id: "org.savantbuild.plugin:file:0.1.0-{integration}")
      dependency(id: "org.savantbuild.plugin:dependency:0.1.0-{integration}")
    }
    group(type: "test-compile") {
      dependency(id: "org.testng:testng:6.8.7")
    }
  }

  publications {
    main {
      publication(name: "${project.name}", type: "jar", file: "build/jars/${project.name}-${project.version}.jar", source: "build/jars/${project.name}-${project.version}-src.jar")
    }
    test {
      publication(name: "${project.name}-test", type: "jar", file: "build/jars/${project.name}-test-${project.version}.jar", source: "build/jars/${project.name}-test-${project.version}-src.jar")
    }
  }
}

dependency = loadPlugin(id: "org.savantbuild.plugin:dependency:0.1.0-{integration}")

groovy = loadPlugin(id: "org.savantbuild.plugin:groovy:0.1.0-{integration}")
groovy.settings.groovyVersion = "2.2"
groovy.settings.javaVersion = "1.8"

groovyTestNG = loadPlugin(id: "org.savantbuild.plugin:groovy-testng:0.1.0-{integration}")
groovyTestNG.settings.groovyVersion = "2.2"
groovyTestNG.settings.javaVersion = "1.8"

target(name: "clean", description: "Cleans the project") {
  groovy.clean()
}

target(name: "compile", description: "Compiles the project") {
  groovy.compileMain()
  groovy.compileTest()
}

target(name: "jar", description: "JARs the project", dependsOn: ["compile"]) {
  groovy.jar()
}

target(name: "test", description: "Runs the project's tests", dependsOn: ["jar"]) {
  groovyTestNG.test()
}

target(name: "int", description: "Releases a local integration build of the project", dependsOn: ["test"]) {
  dependency.integrate()
}